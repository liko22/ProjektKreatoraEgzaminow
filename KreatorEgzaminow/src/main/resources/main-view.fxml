<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="700.0" prefWidth="1100.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="KreatorEgzaminow.Controller">
    <columnConstraints>
        <ColumnConstraints percentWidth="50.0" />
        <ColumnConstraints percentWidth="50.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0);" GridPane.columnIndex="0">
        <GridPane.margin>
            <Insets right="15.0" />
        </GridPane.margin>
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <Label style="-fx-font-weight: bold; -fx-font-size: 22px; -fx-text-fill: #2c3e50;" text="WITAJ W KREATORZE" />

        <HBox spacing="20.0">
            <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                <Label alignment="CENTER" maxWidth="Infinity" prefHeight="70.0" style="-fx-border-color: #dcdde1; -fx-border-width: 1; -fx-background-color: #f9f9f9; -fx-font-weight: bold;" text="PYTANIE&#10;JEDNOKROTNE" textAlignment="CENTER" />
                <RadioButton mnemonicParsing="false" selected="true">
                    <toggleGroup><ToggleGroup fx:id="typPytania" /></toggleGroup>
                </RadioButton>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                <Label alignment="CENTER" maxWidth="Infinity" prefHeight="70.0" style="-fx-border-color: #dcdde1; -fx-border-width: 1; -fx-background-color: #f9f9f9; -fx-font-weight: bold;" text="PYTANIE&#10;WIELOKROTNE" textAlignment="CENTER" />
                <RadioButton mnemonicParsing="false" toggleGroup="$typPytania" />
            </VBox>
        </HBox>

        <TextField prefHeight="50.0" promptText="WPISZ TREŚĆ PYTANIA..." style="-fx-font-size: 15px;" />

        <VBox spacing="12.0">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #95a5a6;" text="ODPOWIEDZI:" />
            <HBox alignment="CENTER_LEFT" spacing="15.0"><TextField promptText="ODPOWIEDŹ 1" HBox.hgrow="ALWAYS" prefHeight="38.0" /><CheckBox scaleX="1.4" scaleY="1.4" /></HBox>
            <HBox alignment="CENTER_LEFT" spacing="15.0"><TextField promptText="ODPOWIEDŹ 2" HBox.hgrow="ALWAYS" prefHeight="38.0" /><CheckBox scaleX="1.4" scaleY="1.4" /></HBox>
            <HBox alignment="CENTER_LEFT" spacing="15.0"><TextField promptText="ODPOWIEDŹ 3" HBox.hgrow="ALWAYS" prefHeight="38.0" /><CheckBox scaleX="1.4" scaleY="1.4" /></HBox>
            <HBox alignment="CENTER_LEFT" spacing="15.0"><TextField promptText="ODPOWIEDŹ 4" HBox.hgrow="ALWAYS" prefHeight="38.0" /><CheckBox scaleX="1.4" scaleY="1.4" /></HBox>
        </VBox>

        <Region VBox.vgrow="ALWAYS" />
        <Button maxWidth="Infinity" prefHeight="60.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 10;" text="DODAJ PYTANIE DO TESTU" />
    </VBox>

    <VBox alignment="TOP_CENTER" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0);" GridPane.columnIndex="1">
        <GridPane.margin>
            <Insets left="15.0" />
        </GridPane.margin>
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <Label style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-font-size: 20px;" text="PODGLĄD TESTU" />

        <Region prefHeight="40.0" />

        <HBox alignment="CENTER" spacing="15.0" maxWidth="Infinity">
            <VBox spacing="15.0" maxWidth="Infinity" HBox.hgrow="ALWAYS" style="-fx-border-color: #e74c3c; -fx-border-width: 2; -fx-padding: 25; -fx-background-color: #fffcfc; -fx-border-radius: 8;">
                <VBox.margin>
                    <Insets left="10.0" />
                </VBox.margin>

                <Label style="-fx-font-weight: bold; -fx-text-fill: #e74c3c; -fx-font-size: 16px;" text="TREŚĆ PYTANIA..." />

                <GridPane hgap="40.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                    </columnConstraints>
                    <Label text="• ODP 1" textFill="#e74c3c" style="-fx-font-size: 14px;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label text="• ODP 2" textFill="#e74c3c" style="-fx-font-size: 14px;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label text="• ODP 3" textFill="#e74c3c" style="-fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="• ODP 4" textFill="#e74c3c" style="-fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </GridPane>
            </VBox>

            <Button minWidth="70.0" prefHeight="40.0" style="-fx-background-color: white; -fx-border-color: #e74c3c; -fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-border-radius: 5;" text="USUŃ" />

            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>

        <Region VBox.vgrow="ALWAYS" />
    </VBox>
</GridPane>