<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="750.0" prefWidth="1200.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="KreatorEgzaminow.Controller">
    <columnConstraints>
        <ColumnConstraints percentWidth="50.0" />
        <ColumnConstraints percentWidth="50.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0);" GridPane.columnIndex="0">
        <GridPane.margin>
            <Insets right="15.0" />
        </GridPane.margin>
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <Label style="-fx-font-weight: bold; -fx-font-size: 22px; -fx-text-fill: #2c3e50;" text="DODAJ NOWE PYTANIE" />

        <HBox spacing="20.0">
            <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                <Label alignment="CENTER" maxWidth="Infinity" prefHeight="70.0" style="-fx-border-color: #dcdde1; -fx-border-width: 1; -fx-background-color: #f9f9f9; -fx-font-weight: bold;" text="PYTANIE&#10;JEDNOKROTNE" textAlignment="CENTER" />
                <RadioButton mnemonicParsing="false" selected="true">
                    <toggleGroup><ToggleGroup fx:id="typPytania" /></toggleGroup>
                </RadioButton>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                <Label alignment="CENTER" maxWidth="Infinity" prefHeight="70.0" style="-fx-border-color: #dcdde1; -fx-border-width: 1; -fx-background-color: #f9f9f9; -fx-font-weight: bold;" text="PYTANIE&#10;WIELOKROTNE" textAlignment="CENTER" />
                <RadioButton mnemonicParsing="false" toggleGroup="$typPytania" />
            </VBox>
        </HBox>

        <TextField prefHeight="50.0" promptText="TREŚĆ PYTANIA..." style="-fx-font-size: 15px;" />

        <VBox spacing="10.0">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #95a5a6;" text="ODPOWIEDZI:" />
            <HBox alignment="CENTER_LEFT" spacing="15.0"><TextField promptText="ODPOWIEDŹ 1" HBox.hgrow="ALWAYS" prefHeight="38.0" /><CheckBox scaleX="1.4" scaleY="1.4" /></HBox>
            <HBox alignment="CENTER_LEFT" spacing="15.0"><TextField promptText="ODPOWIEDŹ 2" HBox.hgrow="ALWAYS" prefHeight="38.0" /><CheckBox scaleX="1.4" scaleY="1.4" /></HBox>
            <HBox alignment="CENTER_LEFT" spacing="15.0"><TextField promptText="ODPOWIEDŹ 3" HBox.hgrow="ALWAYS" prefHeight="38.0" /><CheckBox scaleX="1.4" scaleY="1.4" /></HBox>
            <HBox alignment="CENTER_LEFT" spacing="15.0"><TextField promptText="ODPOWIEDŹ 4" HBox.hgrow="ALWAYS" prefHeight="38.0" /><CheckBox scaleX="1.4" scaleY="1.4" /></HBox>
        </VBox>

        <Region VBox.vgrow="ALWAYS" />
        <Button maxWidth="Infinity" prefHeight="60.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 10;" text="DODAJ DO BAZY" />
    </VBox>

    <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 0);" GridPane.columnIndex="1">
        <GridPane.margin>
            <Insets left="15.0" />
        </GridPane.margin>
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <Label style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-font-size: 20px;" text="BAZA PYTAŃ" />

        <ListView VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: #f0f2f5; -fx-border-radius: 5;" />

        <Separator />

        <Button maxWidth="Infinity" prefHeight="65.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-background-radius: 10; -fx-cursor: hand;" text="ROZPOCZNIJ TEST (Losuj 10)" />
    </VBox>
</GridPane>